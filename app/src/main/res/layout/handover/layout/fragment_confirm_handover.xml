<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextHandoverNumber"
                android:layout_width="match_parent"
                android:hint="@string/handover_number"
                android:maxLines="1"
                android:layout_height="wrap_content"/>

        </android.support.design.widget.TextInputLayout>
        <ImageButton
            android:id="@+id/buttonScanHandoverNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/button_scan"
            android:src="@drawable/selector_scan"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_marginTop="60dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/handover_number"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textViewHandoverNumber"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/logistics_provider_agent"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textViewLogisticsProviderAgent"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/handover_total_pallet"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textViewHandoverTotalPallet"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/handover_total_shipment_qty"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textViewHandoverTotalShipmentQty"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/handover_total_weight"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textViewHandoverTotalWeight"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxIsConfirmHandover"
                android:maxLines="1"
                android:checked="false"
                android:hint="@string/is_confirm_handover"
                android:gravity="top"
                android:paddingTop="5dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:id="@+id/textViewConfirmHandoverRemark"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:text="@string/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonSubmit"
            android:background="@color/colorAccent"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />

        <Button
            android:text="@string/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonCancel"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>