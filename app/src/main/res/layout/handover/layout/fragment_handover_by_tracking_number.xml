<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/logistics_provider_agent"
                android:layout_weight="2"
                />
            <Spinner
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/logistics_provider_agent"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:dropDownWidth="250dp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layerType="software"
                android:paddingLeft="10dp"
                tools:ignore="RtlSymmetry"
                android:paddingStart="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextTrackingNumber"
                    android:layout_width="match_parent"
                    android:gravity="top"
                    android:hint="@string/tracking_number"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    tools:ignore="TextFields"
                    android:layout_weight="3"/>

            </android.support.design.widget.TextInputLayout>
            <ImageButton
                android:id="@+id/buttonScanTrackingNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/button_scan"
                android:src="@drawable/selector_scan"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scanned_qty"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/scanned_qty"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@android:color/holo_orange_light"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/tracking_number"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/scan_at"
                android:textSize="15dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ListView
            android:id="@+id/shipments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            tools:ignore="MissingClass"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:text="@string/confirm_handover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonSubmit"
            android:background="@color/colorAccent"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />

        <Button
            android:text="@string/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonCancel"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>