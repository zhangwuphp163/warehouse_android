<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="4">
                <TextView
                    android:id="@+id/task"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp" />
                <TextView
                    android:id="@+id/progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#4682B4"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:text="@string/cycle_count_scan_by"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/checker"
                    android:textColor="#FF8C00"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="8dp"
                android:max="100"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:text="@string/cycle_count_scanned_qty" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/scanned_qty"
                    android:layout_weight="1"
                    android:textColor="#FF8C00"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:text="@string/cycle_count_status"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF8C00"
                    android:textSize="16sp"
                    android:id="@+id/status"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:text="@string/cycle_count_target_qty"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF8C00"
                    android:textSize="16sp"
                    android:id="@+id/count_qty"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:text="@string/cycle_count_inventory_qty"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF8C00"
                    android:textSize="16sp"
                    android:id="@+id/inventory_qty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="3"
                android:id="@+id/inventory_check_button_line">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"
                    android:text="@string/single_counting"
                    android:layout_margin="3dp"
                    android:textColor="#fff"
                    android:id="@+id/single"
                    android:textSize="13sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:background="@color/colorBlue"
                    android:layout_weight="1"
                    android:id="@+id/batch"
                    android:textColor="#fff"
                    android:text="@string/batch_counting"
                    android:layout_margin="3dp"
                    android:textSize="13sp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:background="@color/colorGreen"
                    android:layout_weight="1"
                    android:id="@+id/completed"
                    android:textColor="#fff"
                    android:text="@string/confirm_complete"
                    android:layout_margin="3dp"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>