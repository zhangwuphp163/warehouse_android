<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/task_item_detail"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="@string/cycle_count_bin_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp" />
                <TextView
                    android:id="@+id/bin_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#4682B4"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    tools:ignore="Suspicious0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="@string/sku_barcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp" />
                <TextView
                    android:id="@+id/sku_barcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#4682B4"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    tools:ignore="Suspicious0dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:text="@string/cycle_count_scanned_qty" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/scanned_qty"
                    android:layout_weight="1"
                    android:textColor="#4682B4"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:text="@string/cycle_count_inventory_qty"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#4682B4"
                    android:textSize="18sp"
                    android:id="@+id/inventory_qty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:paddingTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:text="@string/cycle_count_target_qty"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/count_qty"
                    android:textColor="#4682B4"
                    android:textSize="18sp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"
                    android:text="@string/recounting"
                    android:layout_margin="3dp"
                    android:textColor="#fff"
                    android:id="@+id/recounting"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>