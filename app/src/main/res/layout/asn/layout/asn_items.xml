<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorContentMainBackground"
    android:paddingBottom="5dp"
    android:divider="@null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/sku_barcode"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sku_barcode"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/po_number"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/po_number"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_weight="2"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/sku_name"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:id="@+id/sku_name"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:weightSum="4"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/actual_qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/actual_qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/estimated_qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/estimated_qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>