<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextPickWaveNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pick_wave_number"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields" />
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanPickWaveNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextNumberPlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/number_plate"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields"/>
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanNumberPlate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextSkuBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sku_barcode"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields"/>
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanSkuBarcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scan_order_number_to_assign_label"
                android:textColor="@color/colorAccent">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextOrderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/order_number"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields"/>
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanOrderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="2"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toteCodeLinear"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTote"
                android:textSize="40dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text=""
                >

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:text="@string/button_complete_sorting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonCompleteSorting"
            android:background="@color/colorAccent"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />

        <Button
            android:text="@string/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonClear"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>

