<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorContentMainBackground"
    android:paddingBottom="5dp"
    android:divider="@null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/colorPartialSuccess">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/handling_unit_number"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:id="@+id/list_view_handling_unit_number"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/sku_barcode"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:id="@+id/sku_barcode"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/location"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/location"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="2"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/operated_at"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:id="@+id/operated_at"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:id="@+id/qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>