<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextPickWaveNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pick_wave_number"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields" />
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanPickWaveNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextZoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/zone"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields" />
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanZoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/linearLayoutBoxid"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextBoxId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/boxid"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields" />
            </android.support.design.widget.TextInputLayout>
            <Button android:id="@+id/buttonClearIcon"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/clear"
                android:visibility="gone"
                />
            <ImageButton android:id="@+id/buttonScanBoxId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/boxid"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/location"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button android:id="@+id/buttonClearLocationIcon"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/clear"
                android:visibility="gone"
                />
            <ImageButton android:id="@+id/buttonScanLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextSkuBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sku_barcode"
                    android:inputType="text"
                    android:maxLines="1"
                    tools:ignore="TextFields"/>
            </android.support.design.widget.TextInputLayout>
            <ImageButton android:id="@+id/buttonScanSkuBarcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_scan"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/button_scan"
                android:layout_weight="1"
                />
        </LinearLayout>
