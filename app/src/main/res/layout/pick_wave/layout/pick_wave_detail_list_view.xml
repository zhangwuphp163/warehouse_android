<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:id="@+id/pick_wave_detail_line"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/location"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/location"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="2"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/sku_barcode"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sku_barcode"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="2"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/skip_qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/skip_qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:id="@+id/button_skip"
                        android:text="@string/skip"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorFailed"
                        android:layout_marginRight="10dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:id="@+id/button_take_down"
                        android:text="@string/take_down"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorAccent"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/waiting_take_down_qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/waiting_take_down_qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/take_down_qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/take_down_qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/is_take_down"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>