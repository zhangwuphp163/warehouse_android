<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorContentMainBackground"
    android:paddingBottom="5dp"
    android:divider="@null"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/pick_wave_number"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pick_wave_number"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="2"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/client_name"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pick_wave_client_name"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="2"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/type"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pick_wave_type"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/pick_wave_order_qty"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="textStart"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pick_wave_total_qty"
                    android:textColor="@color/colorAccent"
                    tools:ignore="Suspicious0dp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="3">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"
                    android:text="@string/pick_wave_picking"
                    android:layout_margin="3dp"
                    android:textColor="#fff"
                    android:id="@+id/picking"
                    android:textSize="13sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:id="@+id/pick_wave_picking_by_handing_unit"
                    android:textColor="#fff"
                    android:text="@string/picking_by_handing_unit"
                    android:layout_margin="3dp"
                    android:textSize="13sp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@color/colorBlue"
                    android:layout_weight="1"
                    android:id="@+id/second_sort"
                    android:textColor="#fff"
                    android:text="@string/second_sort"
                    android:layout_margin="3dp"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>