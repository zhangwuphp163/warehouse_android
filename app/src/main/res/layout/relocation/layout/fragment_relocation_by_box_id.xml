<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayoutBoxId"
                android:layout_weight="3">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextBoxId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/boxid"
                    android:inputType="text"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/buttonScanBoxId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/button_scan"
                android:src="@drawable/selector_scan"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayoutToLocation"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="3">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextToLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/to_location"
                    android:inputType="text"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/buttonScanToLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textInputLayoutToLocation"
                android:layout_alignBottom="@+id/textInputLayoutToLocation"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:contentDescription="@string/button_scan"
                android:src="@drawable/selector_scan"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sku_barcode"
                android:layout_weight="2"
                android:textColor="@color/colorWhite"
                android:textAlignment="textStart"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sku_name"
                android:layout_weight="2"
                android:textColor="@color/colorWhite"
                android:textAlignment="textStart"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/qty"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textAlignment="textStart"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/relocation_by_box_id_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingClass"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:text="@string/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonSubmit"
            android:background="@color/colorAccent"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />

        <Button
            android:text="@string/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonCancel"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>